<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_13sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    app:cardElevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_8sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_diet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            app:shapeAppearance="@style/ShapeAppearance.App.CircularImageView"
            tools:src="@tools:sample/backgrounds/scenic"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_title"
            android:layout_alignEnd="@id/tv_title"
            android:layout_alignTop="@id/tv_title"
            android:layout_alignBottom="@id/tv_title"
            android:background="@drawable/bg_diet"
            android:alpha="0.3"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/full_names"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/bold"
            android:layout_alignBottom="@id/img_diet"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem/random"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="sans-serif-light"
            android:layout_below="@id/img_diet"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_8sdp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/black"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
